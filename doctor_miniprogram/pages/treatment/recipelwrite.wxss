/* pages/treatment/recipelwrite.wxss */

.titleline{
  width: 100%;
  display:flex;
  flex-direction: row;
}
.titlepart{
  width: 440rpx;
  height: 40rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
  margin-bottom: 35rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #747474;
  text-align: left;
}


.van-button--actionbutton{
  margin-top: 32rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  color: #018DF0;
  border-color: #018DF0;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 20%;
  font-size: 25rpx;
  width: 250rpx;
}
.medicineline{
  height: 80rpx;
  margin-bottom: 10rpx;
}
.medicineitem{
  display: -webkit-box;
  height: 80rpx;
  line-height: 80rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden; 
  text-overflow:ellipsis;
  text-align: left;
  margin-left: 30rpx;
  font-size: 28rpx;
}

.van-button--submit{
  width: 320rpx;
  height: 80rpx;
  margin-left: 60rpx;
  background-color: #018DF0;
  color: white;
}

.van-button--cancel{
  width: 320rpx;
  height: 80rpx;
  margin-left: 30rpx;
  background-color: #ffffff;
  color: #018DF0;
  border-color: #018DF0;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 20%;
}

.buttonline {
  display: flex;
  flex-direction:row;
  margin-top: 100rpx;
  width: 100%;
  height: 100rpx;
}

.blankarea{
  height: 20rpx;
}