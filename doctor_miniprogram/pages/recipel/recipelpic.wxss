  line-height: 36rpx;
}

.birthview{
  text-align: right;
  overflow: hidden; 
  text-overflow:ellipsis;
  width: 330rpx;
  height: 35rpx;
  font-size: 28rpx;
  margin-top: 22rpx;
  margin-right: 30rpx;
  line-height: 35rpx;
}

.secondpart{
  text-align: left;
  overflow: hidden; 
  text-overflow:ellipsis;
  width: 100%;
  height: 26rpx;
  font-size: 22rpx;
  color: #959595;
  margin-top: 17rpx;
  margin-left: 30rpx;
  line-height: 26rpx;
}

.diliver{
  width: 680rpx;
  height: 1rpx;
  margin-top: 30rpx;
  margin-left: 5rpx;
  background-color: #dddddd;
}

.thirdpart{
  display: flex;
  flex-direction:row;
  width: 100%;
  height: 60rpx;
}

.cardview{
  text-align: left;
