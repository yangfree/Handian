/* pages/recipel/recipelpic.wxss */

.titleline{
  width: 100%;
  display:flex;
  flex-direction: row;
}
.titlepart{
  width: 540rpx;
  height: 40rpx;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-bottom: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #747474;
  text-align: left;
}

.patientinfo{
  display: flex;
  flex-direction:column;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 195rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}
.firstpart{
  display: flex;
  flex-direction:row;
  width: 100%;
  height: 60rpx;
}

.nameview{
  text-align: left;
  overflow: hidden; 
  text-overflow:ellipsis;
  width: 300rpx;
  height: 35rpx;
  font-size: 28rpx;
  margin-top: 22rpx;
  margin-left: 30rpx;
  line-height: 35rpx;
}

.sexview{
  text-align: right;
  overflow: hidden; 
  text-overflow:ellipsis;
  width: 60rpx;
  height: 36rpx;
  font-size: 28rpx;
