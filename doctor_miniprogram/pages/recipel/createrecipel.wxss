/* pages/recipel/createrecipel.wxss */

.titleline {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.titlepart {
  width: 440rpx;
  height: 40rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
  margin-bottom: 35rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #747474;
  text-align: left;
}


.van-button--actionbutton {
  margin-top: 32rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  color: #018DF0;
  border-color: #018DF0;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 20%;
  font-size: 25rpx;
  width: 250rpx;
}

.medicineline {
  height: 80rpx;
  margin-bottom: 10rpx;
}

.medicineitem {
  display: -webkit-box;
  height: 80rpx;
  line-height: 80rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  margin-left: 30rpx;
  font-size: 28rpx;
}

.van-button--submit {
  width: 320rpx;
  height: 80rpx;
  margin-left: 60rpx;
  background-color: #018DF0;
  color: white;
}

.van-button--cancel {
  width: 320rpx;
  height: 80rpx;
  margin-left: 30rpx;
  background-color: #ffffff;
  color: #018DF0;
  border-color: #018DF0;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 20%;
}

.buttonline {
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
  width: 100%;
  height: 100rpx;
}

.blankarea {
  height: 20rpx;
}

.btn-template button {
  margin: 35rpx 0;
}

.panel-body {
  box-sizing: border-box;
  padding: 0 15rpx 15px;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #F5F9F4;
}

.panel-body text {
  color: #777;
  margin: 0 15rpx;
  text-shadow: 0 0 0 #333;
}

.btn-right {
  text-align: right;
}

.doctor-say {
  padding: 0 15px;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #555;
}

.doctor-say .doctor-say-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.doctor-say .doctor-input input[type='number'] {
  border-bottom: 1px solid #f5f5f5;
  width: 80rpx;
  text-align: center;
  display: inline-block;
  vertical-align: -5px;
  color: #ff0000;
  font-size: 30rpx;
}

.doctor-say .doctor-click {
  display: flex;
  flex-direction: row;
}

.doctor-say .doctor-click text {
  display: block;
  width: 100rpx;
  height: 45rpx;
  line-height: 16rpx;
  text-align: center;
  border: 1px dashed #f5f5f5;
  background-color: #f5f5f5;
}

.doctor-say .doctor-click text.active {
  border: 1px dashed #ff0000;
}

.doctor-say .doctor-click text:nth-child(1) {
  margin: 0 25px;
}