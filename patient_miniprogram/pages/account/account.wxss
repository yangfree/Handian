/* pages/account/account.wxss */

.topPanel {
  background-color: floralwhite;
  height: 180rpx;
  width: 95%;
  margin: 0 auto 20rpx;
  border-radius: 20rpx;
}

.panelIcon {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.panelImg {
  display: block !important;
}
.panelContent {
  height: 100%;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  flex-direction:column;
}
.nickName {
  font-size: 13px;
  /* color:darkgrey; */
}
.phone {
  font-size: 12px;
  color:darkgrey;
}

.userOption{
  padding-top: 10px;
  height:100%;
  text-align: right;
}

.user-info-banner {
  max-width: 100%;
}

.user-info-banner image {
  width: 100%;
  height: 100%;
}

.van-tabs__nav--card{
  /* color:black !important; */
  border: 1px solid #07c160 !important;
}
.van-tabs__nav--card .van-tab{
  /* color:darkgrey !important; */
  border-right: 1px solid #07c160 !important;
  color:darkgrey !important;
}
.van-tabs__nav--card .van-tab.van-tab--active {
  background-color: #07c160 !important;
  color:white !important;
}
.van-tabs__scroll--card {
  margin:0px 1px !important;
}

.content {
  padding: 20px;
  font-size: 16px;
}

.footer {
  text-align: right !important;
}
