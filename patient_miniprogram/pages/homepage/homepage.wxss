page {
  height: 100%;
}

.bg-pic {
  height: 25%;
  width: 100%;
  /* 750rpx */
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.img {
  flex: none;
  height: 185rpx;
  width: 100%;
}

.title {
  margin-top: 150rpx;
  margin-left: 40rpx;
/* align-items:center; */
/* justify-content: center; */
font-family:'Times New Roman', Times, serif;
font-weight:400;
font-size: 20pt;
}

.van-divider{
  margin:4px !important;
  color:azure;
}

.click-btn-group {
  max-width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  /* padding: 50rpx 0; */
}

.click-btn-group .btn-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 35rpx 0;
}
.click-btn-group .btn-item:nth-child(2) {
  border-right: 1px solid #e5e5e5;
  border-left: 1px solid #e5e5e5;
}

.click-btn-group .btn-item .img {
  width: 100rpx;
  height: 100rpx;
}

.click-btn-group .btn-item text {
  font-size: 25rpx;
  color: #555;
  margin-top: 25rpx;
}